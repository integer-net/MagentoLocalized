<config>

    <wizard>
        <steps>
            <begin translate="code">
                <code>Country Selection</code>
                <controller>wizard</controller>
                <action>begin</action>
            </begin>
        </steps>
    </wizard>

    <magento_localized>
        <editions>
            <de>
                <name>Magento DE - Deutschland</name>
                <image_filename>magento_localized/magento-edition-de.jpg</image_filename>
                <module_package>integer-net/magento-localized-de</module_package>
                <locale_package>riconeitzel/german-localepack-de-de</locale_package>
            </de>
            <at>
                <name>Magento AT - Österreich</name>
                <image_filename>magento_localized/magento-edition-at.jpg</image_filename>
                <module_package>integer-net/magento-localized-at</module_package>
                <locale_package></locale_package>
                <locale_fallback_package>riconeitzel/german-localepack-de-de</locale_fallback_package>
            </at>
            <ch>
                <name>Magento CH - Schweiz</name>
                <image_filename>magento_localized/magento-edition-ch.jpg</image_filename>
                <module_package>integer-net/magento-localized-ch</module_package>
                <locale_package></locale_package>
                <locale_fallback_package>riconeitzel/german-localepack-de-de</locale_fallback_package>
            </ch>
            <nl>
                <name>Magento NL - Nederland</name>
                <image_filename>magento_localized/magento-edition-nl.jpg</image_filename>
                <module_package>integer-net/magento-localized-nl</module_package>
                <locale_package>ho-nl/ho_nl_nl</locale_package>
            </nl>
            <ru>
                <name>Magento RU - Россия</name>
                <module_package>integer-net/magento-localized-ru</module_package>
                <image_filename>magento_localized/magento-edition-ru.jpg</image_filename>
                <locale_package>etws/et_russianlanguagepack</locale_package>
            </ru>
        </editions>
        <ebay_edition>
            <module_package>integer-net/magento-localized-ebay</module_package>
        </ebay_edition>
    </magento_localized>

</config>